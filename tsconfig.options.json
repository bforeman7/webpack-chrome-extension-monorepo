{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "incremental": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "target": "esnext"
    },
    "exclude": [
        "node_modules",
    ]
}